<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
      <section class="user_info">
      <%= render 'shared/user_info' %>
      </section>
      <section class="twbook_form">
        <%= render 'shared/twbook_form' %>
        </section>
  </aside>
  <div class="col-md-8">
    <% if @user.twbooks.any? %>
      <h3>TW Books (<%= @user.twbooks.count %>)</h3>
      <ol class="twbooks">
        <%= render @twbooks %>
      </ol>
      <%= will_paginate @twbooks %>
    <% else %>
      <h3>No TWBook</h3>
    <% end %>
  </div>
</div>

